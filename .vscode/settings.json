{
  // Terminal
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${env:PYTHONPATH};${workspaceFolder}/src;${env:PYTHONPATH};${workspaceFolder}/build_tools"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/src:${env:PYTHONPATH}:${workspaceFolder}/build_tools"
  },
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${env:PYTHONPATH}:${workspaceFolder}/src:${env:PYTHONPATH}:${workspaceFolder}/build_tools"
  },

  // Ruff
  "ruff.enable": true,
  "ruff.lint.run": "onType",
  "ruff.fixAll": true,
  "ruff.codeAction.fixViolation": {
    "enable": true
  }
}
